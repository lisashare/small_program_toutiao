<!--index.wxml 小程序难在布局-->

<import src="item.wxml"/>
<view class="page index">
<!-- 头部导航 -->
  <view class="navbar">
    <!-- 滚动 -->
    <scroll-view class="scroll-view_H" scroll-x style="width: 100%">
      <!-- 滚动内部需要再套一层 -->
      <view class="navbar-content">
        <!-- 内部循环的数据 -->
        <view class="{{'navbar-item' + (activeId === item.id? ' active' : '') }}"
          data-id = "{{ item.id }}"
          bindtap = "changeActiveId"  
          wx:for = "{{ navs }}" 
          wx:key = "{{ item.id }}"
          >
          {{ item.title }}
        </view>

      </view>  

    </scroll-view>

  </view>  
  <!-- 下方数据 -->

  <view class="content-box">

    <template wx:if = "{{activeId !== 2}}" is = "common-item" data="{{lists: lists}}"></template>
    
    <template wx:else is = "video-item" data="{{lists: lists}}"></template>
  </view>

  <!-- 回到顶部按钮 -->
  <view class="back-top" bindtap="goTop" wx:if ="{{isBackShow}}">T</view>
</view>